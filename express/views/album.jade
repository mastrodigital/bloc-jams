extends layouts/player_layout

block content
  .container.album-container
    .row.album-header-container
      .col-md-3
        img(src="http://upload.wikimedia.org/wikipedia/en/7/70/Graduation_%28album%29.jpg")
      .col-md-9.col-md-push-1
        .album-header-information
          h3.album-title Graduation
          h4.album-artist Kanye West
          h5.album-meta-info Roc-A-Fella Records 2007
    .row
      .col-md-12
        table.table.table-striped.album-song-listing  
          thead
            tr
              th #
              th Title
              th Duration       
          tbody.table-hover  
            each colorName, index in ['Good', 'Champion', 'Stronger', 'Wonder', 'Good', 'Nothing', 'Barry', 'Drunk', 'Lights'] 
              tr
                td 
                  | #{index + 1}
                td 
                  | #{colorName}
                td 
                  | X : XX              